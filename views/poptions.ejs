<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/base.css">
    <link rel="stylesheet" href="/poptions.css">
    <link rel="stylesheet" href="/media/media-poptions.css">
    <link rel="stylesheet" href="/media/media-header.css">
    <script src="/base.js" defer></script>
    <title>Document</title>
</head>
<body>
<header id="box">
    <div class="logo">
        <a href="https://www.facebook.com/" target="_blank"><img src="/img/lila.png" alt="logo"></a>
    </div>
    <div class="h1">
        <img id="img2" src="/img/cool.png" alt="logo">
    </div>
    <div class="cont">
        <a href="/profile">
            <% if (typeof user.img !== "undefined") { %>
                <img src="<%= user.img.replace("/public", "") %>" alt="">
            <% } else { %>
                <img src="/img/profile-icon-png-898.png" alt="">
            <% } %>
        </a>
        <div class="dropdown">
            <button onclick="dropdown()" class="dropbtn">Menu &#8595</button>
            <div id="myDropdown" class="dropdown-content">
                <a href="/home">Home</a>
                <a href="/logout">Logout</a>
            </div>
        </div>
    </div>
</header>
<main>
    <div class="box1">
        <h1 class="title">Change profile picture</h1>
        <div class="form">
            <form action="/profile/<%= user._id %>" method="post" enctype="multipart/form-data">
                <input type="file" name="avatar" required id="file" class="inputfile"/>
                <br>
                <button type="submit" name="submit">Change</button>
            </form>
        </div>
    </div>
    <div class="box">
        <h1 class="title">Change password</h1>
        <div class="form">
            <% if (typeof error !== "undefined") {%>
                <div class="error">
                    <%= error%>
                </div>
            <%}%>
            <form action="/changePassword" method="post">
                <input type="password" name="cpswd" placeholder="Your current password" required>
                <br>
                <input type="password" name="password" placeholder="New password" required>
                <br>
                <input type="password" name="password2" placeholder="Confirm new password" required>
                <br>
                <button type="submit" name="submit">Change</button>
            </form>
        </div>
    </div>
    <div class="box">
        <h1 class="title">Change email</h1>
        <div class="form">
            <form action="/changeEmail" method="post">
                <input type="email" name="newEmail" placeholder="New email" required>
                <br>
                <button type="submit" name="submit">Change</button>
            </form>
        </div>
    </div>
        <div class="box">
            <h1 class="title">Change username</h1>
            <div class="form">
                <form action="changeUsername" method="post">
                    <input type="text" name="newUsername" placeholder="New username" required>
                    <br>
                    <button type="submit" name="submit">Change</button>
                </form>
            </div>
        </div>
        <div class="box">
            <h1 class="title">Delete account</h1>
            <div class="form">
                <form action="/delete" method="post">
                    <input type="password" name="password" placeholder="Password" required>
                    <br>
                    <button type="submit" name="submit">Delete</button>
                </form>
            </div>
        </div>
</main>

</body>
</html>