<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/upload.css">
    <link rel="stylesheet" href="/base.css">
    <link rel="stylesheet" href="/edit.css">
    <link rel="stylesheet" href="/media/media-header.css">
    <script defer src="/base.js"></script>
    <title>Edit</title>
</head>
<header id="box">
    <div class="logo">
        <a href="https://www.facebook.com/" target="_blank"><img src="/img/lila.png" alt="logo"></a>
    </div>
    <div class="h1">
        <img id="img2" src="/img/cool.png" alt="logo">
    </div>
    <div class="cont">
        <a href="/profile">
            <% if (typeof user.img !== "undefined") { %>
                <img src="<%= user.img.replace("/public", "") %>" alt="">
            <% } else { %>
                <img src="/img/profile-icon-png-898.png" alt="">
            <% } %>
        </a>
        <div class="dropdown">
            <button onclick="dropdown()" class="dropbtn">Menu &#8595</button>
            <div id="myDropdown" class="dropdown-content">
                <a href="/home">Home</a>
                <a href="/poptions">Profile options</a>
                <a href="/logout">Logout</a>
            </div>
        </div>
    </div>
</header>
<body>
<div class="box">
    <h1 class="title" id="title">Edit upload</h1>
    <div class="form">
        <form action="/post-edit" method="post" enctype="multipart/form-data">
            <div class="fields">
                <input type="hidden" name="id" value="<%= post.id %>" required>
                <br>
                <input type="text" name="title" value="<%= post.title %>" required>
                <br>
                <input type="file" name="file" >
                <br>
                <input id="editbtn" type="submit" value="Edit Post">
            </div>
            <div id="pic">
                <h1>Current Image:</h1>
            <img src="<%= post.img.replace("/public", "") %>" alt="">
            </div>
        </form>
    </div>
</div>
</body>
</html>